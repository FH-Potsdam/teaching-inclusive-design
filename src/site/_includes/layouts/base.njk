{% from '../parts/macros.njk' import renderNav %}
{% from '../parts/macros.njk' import renderLang %}
{% from '../parts/macros.njk' import renderCrumbs %}
{% from '../parts/macros.njk' import renderPageNav %}
<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#108bd0">
    <meta name="msapplication-TileColor" content="#2d89ef">
    <meta name="theme-color" content="#ffffff">
    <title>{{ title }}{% if title %} - {% endif %}Parametric Design</title>
    <link rel="stylesheet" href="/css/base.css" />
  </head>
  <body>
    <header id="header">
      <div>
        <img id="header-illu" src="/images/header/{{ [1,2,3,4,5,6] | random }}.png" alt="Illustration of a parametric shape design" />
        <div>
          <a href="/{{locale}}/">
            <span class="page-title">Parametric Design</span>
            <span class="page-subtitle">An introduction to code-driven design</span>
          </a>
        </div>
        <a href="https://www.fh-potsdam.de"><img id="header-logo" src="/images/logo-fhp-abbrev-black.svg" alt="{{ translations.fhp[locale] }}" /></a>
      </div>
    </header>
    <div id="container">
      <nav>
        {{ renderNav(collections, page, locale, content) }}
        {{ renderLang(page.url) }}
      </nav>
      <main>
        {% if eleventyNavigation %}
        {{ renderCrumbs(collections, eleventyNavigation.key, locale) }}
        {% else %}
        {{ renderCrumbs(collections, null, locale) }}
        {% endif %}
        <h1>{{ title }}</h1>
        {{ content | safe }}
        {{ renderPageNav(collections, page, locale) }}
        <p class="backtotop">
          <a title="{{translations.top[locale]}}" href="#header">{{translations.top[locale]}}</a>
        </p>
      </main>
    </div>
    <footer>
      <div>
        <div>
          <a href="https://idl.fh-potsdam.de"><img class="logo-idl" src="/images/logo-idl-white.svg" alt="IDL - Interaction Design Lab" /></a>
          <a href="https://www.fh-potsdam.de"><img class="logo-fhp" src="/images/logo-fhp-white.svg" alt="{{ translations.fhp[locale] }}" /></a>
        </div>
        <div>
          <ul>
            <li>{{ translations.footer.study[locale] | safe }}<br /><br /></li>
            <li><a href="https://www.fh-potsdam.de/interfacedesign/">{{ translations.footer.interface[locale] | safe }}</a></li>
            <li><a href="https://www.fh-potsdam.de/studieren/fachbereiche/design/studiengaenge/produktdesign/">{{ translations.footer.product[locale] | safe }}</a></li>
          </ul>
        </div>
        <div>
          <ul>
            <li><a href="/{{locale}}/about">{{ translations.footer.about[locale] }}</a></li>
            <li><a href="/{{locale}}/contribute">{{ translations.footer.contribute[locale] }}</a></li>
            <li><a href="https://github.com/FH-Potsdam/teaching-parametric-design/issues">{{ translations.footer.feedback[locale] }}</a></li>
            <li><a href="/{{locale}}/legal">{{ translations.footer.legal[locale] }}</a></li>
            <li><a href="/{{locale}}/privacy">{{ translations.footer.privacy[locale] }}</a></li>
          </ul>
        </div>
      </div>
    </footer>
    <script src="/js/main.js"></script>
  </body>
</html>
